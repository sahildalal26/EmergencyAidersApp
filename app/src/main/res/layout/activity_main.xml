<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Emergency Aiders App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="16dp" />

    <!-- Button to Log in -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_marginTop="16dp" />

    <!-- Button to Sign Up as User -->
    <Button
        android:id="@+id/btnSignUpUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up as User"
        android:layout_marginTop="16dp" />

    <!-- Button to Sign Up as First Aider -->
    <Button
        android:id="@+id/btnSignUpAider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up as First Aider"
        android:layout_marginTop="16dp" />

</LinearLayout>
